<?xml version='1.0' encoding='utf-8'?>
<widget id="com.horle.argo" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Life of Julius</name>
    <description>
        Life of Julius: Ein Geo-Discovery-Spiel für Kölner Archäologen im ersten Semester.
    </description>
    <author email="argo@uni-koeln.de" href="http://argo.uni-koeln.de">
        ArGO, Gruppe 3/C
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~5.1.0" />
</widget>
